<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryCol</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/BackGroundDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/BackGroundDark</item>
    </style>
    <style name="cardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/item_card_bg_Dark</item>
    </style>

    <style name="addBtnBg" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/add_button_bg</item>
    </style>
    <style name="doneBtnBg" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/done_button_bg</item>
    </style>

    <style name="textCol">
        <item name="android:textColor">@color/text_color_Dark</item>
    </style>

    <style name="Dialog">
        <item name="android:background">@color/bottomSheetBgDark</item>
    </style>

    <style name="bottomBarBg" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/bottomAndTopBar_bgDark</item>

    </style>

    <style name="dialogTxtCol"><item name="android:textColor">@color/bottomSheetTxtDark</item></style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dark_bg</item>
    </style>

</resources>