<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="5dp"
                />
            <!-- Background color of the TextView -->
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="-10dp"
        android:right="-10dp"
        android:top="-10dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color for the bottom line -->
            <stroke
                android:width="2dp"
                android:color="@color/secondaryColOrg" />  <!-- Stroke color of the bottom line -->
        </shape>
    </item>
</layer-list>
